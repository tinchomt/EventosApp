<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lectordni.RegistraAsistente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txtDNI"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="DNI"
            android:textSize="30dp" />


        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="NOMBRE"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txtApellido"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="APELLIDO"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txtRegistrado"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Registrado"
            android:textSize="30dp" />


        <EditText
            android:id="@+id/txtObservacion"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Observaciones"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btnIngresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"
            android:background="#32CD32"
            android:text="Ingresar"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnRegistraAsistente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"
            android:background="#32bbcd"
            android:text="Registrar"
            android:textColor="#ffffff" />




    </LinearLayout>

</android.support.constraint.ConstraintLayout>